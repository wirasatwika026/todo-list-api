# Application Configuration
APP_PORT=8080
SPRING_PROFILE=prod

# JWT Configuration
JWT_SECRET=mySecretKey123456789012345678901234567890
JWT_EXPIRATION=86400000

# pgAdmin Configuration (optional)
PGADMIN_EMAIL=admin@todolist.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050
